<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">




        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_songbook1_recommend4_pic1"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:src="@mipmap/play_white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <!--要把图片切圆-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_songbook1_recommend4_pic1"
            android:layout_alignBottom="@+id/iv_songbook1_recommend4_pic1"
            android:layout_alignTop="@+id/iv_songbook1_recommend4_pic1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_songbook1_recommend4_song1"
                android:text="歌曲1"
                android:textSize="12sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_songbook1_recommend4_author1"
                android:text="作者1"
                android:textSize="12sp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_songbook_recommend4_pic1_more"
            android:src="@mipmap/more_hengxiang"
            android:layout_alignParentRight="true"
            />






</RelativeLayout>