<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_list_detail_recommendlist"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginRight="100dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tv_list_detail_song1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌曲名"
                android:textColor="#000000"
                android:singleLine="true"
                android:ellipsize="end"


                />

            <!--<ImageView-->
                <!--android:id="@+id/iv_ishas_mv"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:src="@mipmap/mv"-->
                <!--/>-->

            <ImageView
                android:id="@+id/iv_ishas_mv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_ishas_sq"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:src="@mipmap/sq"
                />


            <TextView
                android:id="@+id/tv_list_detail_author111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_list_detail_song1"
                android:text="作者名"

                android:textColor="#000000"

                android:singleLine="true"
                android:ellipsize="end"

                />


        </LinearLayout>


    </LinearLayout>





    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@mipmap/more_hengxiang"
        />

    <ImageView
        android:id="@+id/iv_ishas_karaoke"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/iv_more"
        android:src="@mipmap/karaok"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_marginTop="60dp"
        />



</RelativeLayout>