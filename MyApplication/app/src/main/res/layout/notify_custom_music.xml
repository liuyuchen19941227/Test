<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iv_custom_music"
        android:src="@mipmap/ic_launcher"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_custom_music"
        android:layout_toRightOf="@+id/iv_custom_music"
        android:text="歌名"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_custom_singer"
        android:layout_toRightOf="@+id/iv_custom_music"
        android:layout_below="@+id/tv_custom_music"
        android:text="歌手"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一曲"
        android:id="@+id/iv_notify_next"
        android:layout_alignParentRight="true"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_notify_start"
        android:text="播放"
        android:layout_toLeftOf="@+id/iv_notify_next"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上一曲"
        android:id="@+id/iv_notify_previous"
        android:layout_toLeftOf="@+id/iv_notify_start"
        />



</RelativeLayout>